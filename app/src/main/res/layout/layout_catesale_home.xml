<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="230dp"
    android:layout_marginRight="12dp"
    android:background="@color/primary_white"
    android:id="@+id/cl_sale_order">

    <ImageView
        android:id="@+id/sale_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sale_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Trà sữa Maycha"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sale_image" />

    <TextView
        android:id="@+id/sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="78,000đ"
        android:textColor="@color/primary_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/sale_name"
        app:layout_constraintTop_toBottomOf="@+id/sale_delivery" />

    <TextView
        android:id="@+id/sale_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="78,000đ"
        android:layout_marginTop="5dp"
        android:textColor="@color/primary_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sale_name"
        app:layout_constraintTop_toBottomOf="@+id/sale_price" />

    <TextView
        android:id="@+id/sale_delivery"
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/time_background"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="-30%"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sale_name"
        app:layout_constraintTop_toBottomOf="@+id/sale_name" />

</androidx.constraintlayout.widget.ConstraintLayout>