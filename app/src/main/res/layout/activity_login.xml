<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25FFFFFF"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_bg_logo_login"
        android:layout_width="179dp"
        android:layout_height="139dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_logo_login"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg_logo_login"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_logo_login"
        app:layout_constraintStart_toStartOf="@+id/img_bg_logo_login"
        app:layout_constraintTop_toTopOf="@+id/img_bg_logo_login" />

    <TextView
        android:id="@+id/txt_xinchao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yum Food"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_margin="10dp"
        android:background="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@+id/txt_xinchao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/css_bg_txt"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textSize="16sp"
        android:hint="Tên đăng nhập/Email"
        android:padding="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/css_bg_txt"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="16sp"
        android:hint="Mật khẩu"
        android:padding="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email" />

    <TextView
        android:id="@+id/txt_quenmk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Quên mật khẩu?"
        android:layout_marginRight="45dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/css_btn_login"
        android:layout_marginTop="50dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_quenmk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_chcotaikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="100dp"
        android:text="Bạn chưa có tài khoản?"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.359"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_dangky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="100dp"
        android:text="Đăng ký ngay"
        android:textColor="@color/primary_color"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toEndOf="@+id/txt_chcotaikhoan" />


</androidx.constraintlayout.widget.ConstraintLayout>
