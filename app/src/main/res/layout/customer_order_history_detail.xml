        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail1"
            android:layout_width="416dp"
            android:layout_height="58dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_customer_order_detail_cl_shipping_info">

            <TextView
                android:id="@+id/layout_product_for_merchant_order_detail_tv_quantity"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:text="2x"
                android:textColor="#707070"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/layout_product_for_merchant_order_detail_tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Combo gà không cay"
                android:textColor="#707070"
                android:textSize="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/layout_product_for_merchant_order_detail_tv_quantity"
                app:layout_constraintEnd_toStartOf="@+id/layout_product_for_merchant_order_detail_tv_unit_price"
                app:layout_constraintStart_toEndOf="@+id/layout_product_for_merchant_order_detail_tv_quantity" />

            <TextView
                android:id="@+id/layout_product_for_merchant_order_detail_tv_topping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="+Topping: Thạch râu câu"
                android:textColor="#707070"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/layout_product_for_merchant_order_detail_tv_product_name"
                app:layout_constraintStart_toStartOf="@+id/layout_product_for_merchant_order_detail_tv_product_name"
                app:layout_constraintTop_toBottomOf="@+id/layout_product_for_merchant_order_detail_tv_quantity" />

            <TextView
                android:id="@+id/layout_product_for_merchant_order_detail_tv_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="200,858 đ"
                android:textColor="#707070"
                android:textSize="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/layout_product_for_merchant_order_detail_tv_product_name"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
