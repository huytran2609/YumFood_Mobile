                android:text="+Topping: Thạch râu câu"
                android:textColor="#707070"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/layout_product_for_merchant_order_detail_tv_product_name2"
                app:layout_constraintStart_toStartOf="@+id/layout_product_for_merchant_order_detail_tv_product_name2"
                app:layout_constraintTop_toBottomOf="@+id/layout_product_for_merchant_order_detail_tv_quantity2" />

            <TextView
                android:id="@+id/layout_product_for_merchant_order_detail_tv_unit_price2"
