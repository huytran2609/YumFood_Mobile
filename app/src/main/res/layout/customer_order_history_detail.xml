        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_customer_order_detail_constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/activity_customer_order_detail_qnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:paddingTop="13dp"
                android:text="3 Món"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/activity_customer_order_detail_constraintLayout2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_customer_order_detail_tv_93"
