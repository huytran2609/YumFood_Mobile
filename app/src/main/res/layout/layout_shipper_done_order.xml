<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_shipper_done"
    android:layout_margin="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_done_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/5/2023"
        android:textSize="16sp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_done_giaohangthanhcong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao hàng thành công"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_line1_done"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/primary_grey"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_giaohangthanhcong"/>

    <TextView
        android:id="@+id/txt_done_order"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/primary_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line1_done" />

    <TextView
        android:id="@+id/txt_done_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Khách hàng"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_done_order"
        app:layout_constraintTop_toBottomOf="@+id/view_line1_done" />

    <TextView
        android:id="@+id/txt_done_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="-N-TPKrh_ZWyrdqS4218"
        app:layout_constraintStart_toEndOf="@+id/txt_done_order"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_full_name" />

    <TextView
        android:id="@+id/txt_done_laydon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Lấy đơn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_order_id" />

    <TextView
        android:id="@+id/txt_done_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="11:30"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_laydon" />

    <TextView
        android:id="@+id/txt_done_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:text="Món"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_order_id" />

    <TextView
        android:id="@+id/txt_done_count_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_marginLeft="123dp"
        android:textColor="@color/red"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_done_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_mon" />
    <TextView
        android:id="@+id/txt_done_khoangcach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="220dp"
        android:text="Khoảng cách"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_order_id" />
    <TextView
        android:id="@+id/txt_done_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.9km"
        android:layout_marginLeft="220dp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_done_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_khoangcach" />

    <TextView
        android:id="@+id/txt_done_tongtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="5dp"
        android:text="Tổng trả: "
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_distance" />

    <TextView
        android:id="@+id/txt_done_tongthu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="Tổng thu: "
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_done_tongtra"
        app:layout_constraintEnd_toStartOf="@+id/txt_done_total_received"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_distance" />
    <TextView
        android:id="@+id/txt_done_total_payable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingBottom="5dp"
        android:text="16.000 đ"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_done_tongtra"
        app:layout_constraintStart_toEndOf="@+id/txt_done_tongtra"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_time" />

    <TextView
        android:id="@+id/txt_done_total_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        android:text="26.000 đ"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_done_tongtra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_distance" />

    <View
        android:id="@+id/view_line2_done"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/primary_grey"
        app:layout_constraintTop_toBottomOf="@+id/txt_done_tongtra" />
    <TextView
        android:id="@+id/txt_done_tienvanchuyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="Tiền vận chuyển nhận được: "
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line2_done" />
    <TextView
        android:id="@+id/txt_done_ship_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        android:text="10.000 đ"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line2_done" />

</androidx.constraintlayout.widget.ConstraintLayout>