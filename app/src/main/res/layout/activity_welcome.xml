<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/img_bg_logo"
        android:layout_width="190dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="148dp"
        android:layout_height="151dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg_logo"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_logo"
        app:layout_constraintStart_toStartOf="@+id/img_bg_logo"
        app:layout_constraintTop_toTopOf="@+id/img_bg_logo" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="Xin chào đến với ứng dụng đặt đồ ăn Yum Food"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo" />

    <ImageView
        android:id="@+id/img_welcome1"
        android:layout_width="190dp"
        android:layout_height="270dp"
        android:src="@drawable/welcome_img1"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
        />

    <ImageView
        android:id="@+id/img_welcome2"
        android:layout_width="250dp"
        android:layout_height="340dp"
        android:src="@drawable/welcome_img2"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_welcome1"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:background="@drawable/css_bg_btn"
        android:text="Bắt đầu"
        android:textSize="16sp"
        android:textColor="@color/primary_color"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>